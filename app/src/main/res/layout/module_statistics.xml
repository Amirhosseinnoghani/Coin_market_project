<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="14dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CoinBitText.Body1Alternate"
        android:text="Statistics"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:padding="12dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            style="@style/CoinBitText.Body1"
            android:id="@+id/tvOpenAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$170.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/CoinBitText.TitleAlternate"
            android:layout_marginTop="4dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            app:layout_constraintStart_toStartOf="@+id/tvOpenAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvOpenAmount" />

        <TextView
            android:layout_marginTop="16dp"
            style="@style/CoinBitText.Body1"
            android:id="@+id/tvTodaysHighAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$179.30"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:layout_marginTop="4dp"
            style="@style/CoinBitText.TitleAlternate"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's High"
            app:layout_constraintStart_toStartOf="@+id/tvTodaysHighAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvTodaysHighAmount" />

        <TextView
            android:layout_marginTop="16dp"
            style="@style/CoinBitText.Body1"
            android:id="@+id/tvTodaysLowAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$169.20"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:layout_marginTop="4dp"
            style="@style/CoinBitText.TitleAlternate"
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Low"
            app:layout_constraintStart_toStartOf="@+id/tvTodaysLowAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvTodaysLowAmount" />

        <TextView
            android:layout_marginTop="16dp"
            style="@style/CoinBitText.Body1"
            android:id="@+id/tvChangeTodayAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$177.32"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:layout_marginTop="4dp"
            style="@style/CoinBitText.TitleAlternate"
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change today's"
            app:layout_constraintStart_toStartOf="@+id/tvChangeTodayAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvChangeTodayAmount" />

        <TextView
            style="@style/CoinBitText.Body1"
            android:id="@+id/tvAlgoritm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12M"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            style="@style/CoinBitText.TitleAlternate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Algoritm"
            app:layout_constraintStart_toStartOf="@+id/tvAlgoritm"
            app:layout_constraintTop_toBottomOf="@+id/tvAlgoritm" />

        <TextView
            android:layout_marginTop="16dp"
            style="@style/CoinBitText.Body1"
            android:id="@+id/tvTotalVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27M"
            app:layout_constraintStart_toStartOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <TextView
            android:id="@+id/textView14"
            style="@style/CoinBitText.TitleAlternate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Total Volume"
            app:layout_constraintStart_toStartOf="@+id/tvTotalVolume"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalVolume" />

        <TextView
            android:layout_marginTop="16dp"
            style="@style/CoinBitText.Body1"
            android:id="@+id/tvAvgMarketCapAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$867.34B"
            app:layout_constraintStart_toStartOf="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:layout_marginTop="4dp"
            style="@style/CoinBitText.TitleAlternate"
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Cap"
            app:layout_constraintStart_toStartOf="@+id/tvAvgMarketCapAmount"
            app:layout_constraintTop_toBottomOf="@+id/tvAvgMarketCapAmount" />

        <TextView
            android:layout_marginTop="16dp"
            style="@style/CoinBitText.Body1"
            android:id="@+id/tvSupplyNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18.433"
            app:layout_constraintStart_toStartOf="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:layout_marginTop="4dp"
            style="@style/CoinBitText.TitleAlternate"
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supply"
            app:layout_constraintStart_toStartOf="@+id/tvSupplyNumber"
            app:layout_constraintTop_toBottomOf="@+id/tvSupplyNumber" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>